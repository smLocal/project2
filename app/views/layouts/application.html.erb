<!DOCTYPE html>
<html>
<head>
  <title>Project2App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body id="all">
  <ul class="nav nav-pills">
    <li role="presentation" class="active">
      <%= link_to 'Home', users_path %>
    </li>

    <li role="presentation" class="active">
      <%= link_to 'View Our Items!', items_path %>
    </li>

    <% if current_user %>

    <li role="presentation" class="active btn-danger">
      <%= link_to('Logout', logout_path, :method => :delete) %>
      <!--
      <form action="/logout" method="post"> -->
        <!-- <input name="_method" value="DELETE" type="hidden">
        <button class="btn btn-danger">Logout</button> -->
      <!-- </form> -->
    </li>

    <% else%>

    <li role="presentation" class="active">
      <%= link_to('Signup', signup_path, :method => :get) %>
      <!--
      <form action="/signup" method="get">
        <input name="_method" value="new" type="hidden">
        <button class="btn btn-danger">Signup</button>
      </form> -->
    </li>
    <li role="presentation" class="active">
      <%= link_to('Login', login_path, :method => :get) %>
      <!--
      <form action="/login" method="get">
        <input name="_method" value="new" type="hidden">
        <button class="btn btn-primary">Login</button>
      </form> -->
    </li>
  </ul>
    <% end %>



<%= yield %>

</body>
</html>
