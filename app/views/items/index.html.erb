<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Case Price</th>
      <th>Unit Price</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><strong><%= item.name %></strong></td>
        <td><%= item.quantity %></td>
        <td><%= item.case_price %></td>
        <td><%= item.unit_price %></td>
        <td><%= item.category %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <% if current_user.is_admin %>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% else %>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
