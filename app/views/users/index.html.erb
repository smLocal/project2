<h1 class="food-table center col-md-10 col-md-offset-1 col-xs-12">Fresh Base- the Farmers Market Database</h1>
<h2 class="food-table center col-md-10 col-md-offset-1 col-xs-12">Check out our Stock!</h2>
<div id="middle">
  <a class="btn btn-primary" href="/items" "users">Click Here!</a>
</div>
<% if current_user %>
<ul class="left">
  <% @users.each do |user| %>
    <li>
      <h3>Signed up User:</h3>
      <!--
        if the current user is admin
        i want them to be able to be to alter other users settings
      -->
      <%= user.email %>
      <% if current_user.is_admin %>
        <% if user.is_admin %>
        <!-- send a a patch to the users controller
        and tell it which user you want to change
        then save and redirect with button -->
           ---This user is admin
        <% else %>
            <%= button_to "make_admin", make_admin_path(user), method: "patch", :class => 'btn btn-warning btn-xs active' %>
        <% end %>
      <% end %>
    </li>

  <% end %>
</ul>

<% end %>
